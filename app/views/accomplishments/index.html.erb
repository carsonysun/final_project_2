<div class="page-header">
  <h1>
    Accomplishments
    <a href="/accomplishments/new" class="btn btn-lg btn-success">New Accomplishment</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "accomplishments_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :image_url_cont, "Image url contains" %>
    <%= f.text_field :image_url_cont, :class => "form-control", :placeholder => "Image url contains" %>
  </div>

<div class="form-group">
    <%= f.label :milestone_cont, "Milestone contains" %>
    <%= f.text_field :milestone_cont, :class => "form-control", :placeholder => "Milestone contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :date, "Log Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='loggteqdatePicker'>
                  <%= f.text_field :log_date_gteq, :class => "form-control", :placeholder => "Log Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='loglteqdatePicker'>
                  <%= f.text_field :log_date_lteq, :class => "form-control", :placeholder => "Log Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#loggteqdatePicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#loglteqdatePicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#loggteqdatePicker').on("dp.change", function (e) {
                  $('#loglteqdatePicker').data("DateTimePicker").minDate(e.date);
              });
              $('#loglteqdatePicker').on("dp.change", function (e) {
                  $('#loggteqdatePicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/accomplishments" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#accomplishments_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Log</th>
        <th>Milestone</th>
        <th>Image url</th>
        <th>Actions</th>
      </tr>

      <% @accomplishments.each do |accomplishment| %>
      <tr>
        <td>
          <% if accomplishment.log.present? %>
            <a href="/logs/<%= accomplishment.log.id %>">
              <%= accomplishment.log.date %>
            </a>
          <% end %>
        </td>
        <td><%= accomplishment.milestone %></td>
        <td><%= accomplishment.image_url %></td>
        <td>
          <a href="/accomplishments/<%= accomplishment.id %>" class="btn btn-primary">Show</a>
          <a href="/accomplishments/<%= accomplishment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_accomplishment/<%= accomplishment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @accomplishments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
