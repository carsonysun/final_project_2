<div class="page-header">
  <h1>
    Habits
    <a href="/habits/new" class="btn btn-lg btn-success">New Habit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Aspiration</th>
        <th>Name</th>
        <th>Goal</th>
        <th>Days per week</th>
        <th>Actions</th>
      </tr>

      <% @habits.each do |habit| %>
      <tr>
        <td><%= habit.user.email %></td>
        <td><%= habit.aspiration_id %></td>
        <td><%= habit.name %></td>
        <td><%= habit.goal %></td>
        <td><%= habit.days_per_week %></td>
        <td>
          <a href="/habits/<%= habit.id %>" class="btn btn-primary">Show</a>
          <a href="/habits/<%= habit.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_habit/<%= habit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
