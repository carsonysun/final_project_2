<div class="page-header">
  <h1>
    Habits
    <a href="/habits/new" class="btn btn-lg btn-success">New Habit</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Aspiration</th>
        <th>Name</th>
        <th>Goal</th>
        <th>Days per week</th>
        <th>Actions</th>
      </tr>

      <% @habits.each do |habit| %>
      <tr>
        <td>
          <% if habit.user.present? %>
            <a href="/users/<%= habit.user.id %>">
              <%= habit.user.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if habit.aspiration.present? %>
            <a href="/aspirations/<%= habit.aspiration.id %>">
              <%= habit.aspiration.name %>
            </a>
          <% end %>
        </td>
        <td><%= habit.name %></td>
        <td><%= habit.goal %></td>
        <td><%= habit.days_per_week %></td>
        <td>
          <a href="/habits/<%= habit.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == habit.user %>
            <a href="/habits/<%= habit.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_habit/<%= habit.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @habits, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
