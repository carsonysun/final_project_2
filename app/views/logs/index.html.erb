<div class="page-header">
  <h1>
    Logs
    <a href="/logs/new" class="btn btn-lg btn-success">New Log</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "logs_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :date, "Date" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='dategteqPicker'>
                  <%= f.text_field :date_gteq, :class => "form-control", :placeholder => "Date greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='datelteqPicker'>
                  <%= f.text_field :date_lteq, :class => "form-control", :placeholder => "Date less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#dategteqPicker').datetimepicker({
                  format: 'MM/DD/YYYY'
              });
              $('#datelteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'MM/DD/YYYY'
              });
              $('#dategteqPicker').on("dp.change", function (e) {
                  $('#datelteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#datelteqPicker').on("dp.change", function (e) {
                  $('#dategteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
    <%= f.label :rating_of_the_day_cont, "Rating of the day contains" %>
    <%= f.text_field :rating_of_the_day_cont, :class => "form-control", :placeholder => "Rating of the day contains" %>
  </div>

<div class="form-group">
    <%= f.label :motivation_level_cont, "Motivation level contains" %>
    <%= f.text_field :motivation_level_cont, :class => "form-control", :placeholder => "Motivation level contains" %>
  </div>

<div class="form-group">
    <%= f.label :time_of_day_cont, "Time of day contains" %>
    <%= f.text_field :time_of_day_cont, :class => "form-control", :placeholder => "Time of day contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/logs" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#logs_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Time of day</th>
        <th>Motivation level</th>
        <th>Rating of the day</th>
        <th>Habit</th>
        <th>Actions</th>
      </tr>

      <% @logs.each do |log| %>
      <tr>
        <td><%= log.date %></td>
        <td><%= log.time_of_day %></td>
        <td><%= log.motivation_level %></td>
        <td><%= log.rating_of_the_day %></td>
        <td>
          <% if log.habit.present? %>
            <a href="/habits/<%= log.habit.id %>">
              <%= log.habit.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/logs/<%= log.id %>" class="btn btn-primary">Show</a>
          <a href="/logs/<%= log.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_log/<%= log.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @logs, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
